<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.branch.search.demo">

    <application
        android:name=".BranchSearchDemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoTitle"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="io.branch.search.BranchDeepViewActivity"
            android:excludeFromRecents="true"
            android:theme="@style/BranchDeepViewActivity"/>

        <activity android:name=".BranchPreferenceActivity" />

        <!-- The demo Branch Key.  Please replace this key with your own key before release. -->
        <meta-data android:name="io.branch.sdk.BranchKey" android:value="key_live_jgKhogSvbj1sZ7PJiQ47dfkozAmfeA4H" />

        <!-- The activity in which Branch DeepViews should be loaded, extending BranchDeepViewActivity or BranchDeepViewActivity itself. -->
        <meta-data android:name="io.branch.sdk.DeepViewActivity" android:value="io.branch.search.BranchDeepViewActivity" />

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>


</manifest>
