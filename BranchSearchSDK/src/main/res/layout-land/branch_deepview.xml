<?xml version="1.0" encoding="utf-8"?>
<!-- Using RelativeLayout as root lets us use the full height, for some reason. -->
<!-- https://stackoverflow.com/a/15594269/4288782 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image -->
        <ImageView
            android:id="@+id/branch_deepview_image"
            android:scaleType="fitCenter"
            android:background="@color/branch_deepview_image_background"
            android:padding="@dimen/branch_deepview_image_padding"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/textColorPrimary"
            android:alpha="0.1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top header -->
            <include layout="@layout/branch_deepview_toolbar" />

            <!-- Content -->
            <include layout="@layout/branch_deepview_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
